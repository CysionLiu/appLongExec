<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/accty_hint"
        android:layout_marginBottom="20dp"
        android:text="Navigation"/>

   <devlight.io.library.ntb.NavigationTabBar
       android:id="@+id/ntb"
       android:layout_width="100dp"
       android:layout_height="24dp"
       app:ntb_animation_duration="300"
       app:ntb_corners_radius="10dp"
       app:ntb_bg_color="#fccc"
       app:ntb_inactive_color="#f000"
       app:ntb_active_color="#ffff"
       app:ntb_swiped="true"
       app:ntb_icon_size_fraction="0.0"
       app:ntb_titled="true"
       app:ntb_title_mode="all"
       app:ntb_title_size="10sp"

       />


</LinearLayout>